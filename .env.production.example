APP_NAME="Mahad Project"
APP_ENV=production
# APP_KEY will be auto-generated by deploy.sh if empty, but better to keep it consistent
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE="Asia/Makassar"

# Main URL (HTTPS required)
APP_URL=https://kajianislamsangatta.com
ASSET_URL=https://kajianislamsangatta.com

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# Database (Uses shared 'database_network')
DB_CONNECTION=mysql
DB_HOST=shared_mariadb
DB_PORT=3306
DB_DATABASE=mahad_db
DB_USERNAME=user
DB_PASSWORD=your_secure_password_here

# Redis (Uses shared 'database_network')
REDIS_HOST=shared_redis
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# Queue & Cache (Must use Redis/Database in Production)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=public
QUEUE_CONNECTION=redis
CACHE_STORE=redis
CACHE_PREFIX=mahad_

# Reverb Server (Backend - Runs on Port 8081 internal)
REVERB_APP_ID=my-app-id
REVERB_APP_KEY=my-app-key
REVERB_APP_SECRET=my-app-secret
REVERB_HOST="0.0.0.0"
REVERB_PORT=8081
REVERB_SCHEME=http

# Vite (Frontend Settings)
# Note: Built in GitHub Actions, kept here for reference.
# Actual build variables are in 'GitHub Variables'.
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="kajianislamsangatta.com"
VITE_REVERB_PORT=443
VITE_REVERB_SCHEME="https"

OCTANE_SERVER=frankenphp
